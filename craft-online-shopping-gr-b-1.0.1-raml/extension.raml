      - lib.collections
        
  put:
    description: get all users
    responses:
      200:
        body:
          application/json:
            examples:
              {
                "message": "user updated"
              }
    is:
      - lib.collections
  delete:
    description: Delete by admin 
    responses:
      200:
        body:
          application/json:
            examples:
              {
                "message": "user is deleted"
              }
    is:
      - lib.collections
