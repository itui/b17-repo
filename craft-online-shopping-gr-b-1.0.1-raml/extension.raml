#%RAML 1.0 Extension
extends:  craft-online-shopping-gr-b.raml
securedBy:
  - lib.security
# adminproducts, adminorders, adminusers and admincategories are used for administration support 
/adminproducts:
  description: administration product
  get:
    description: get all products
    responses:
      200:
        body:
          application/json:
            example: !include Examples/Products.raml
    is:
      - lib.collections      
  put:
    description:  updated by admin
    responses:
      200:
        body:
          application/json:
            example:
              {
                "message": " Product updated Succesfully"
              }
    is:
      - lib.collections 
  delete:
    description: deleted by admin
    responses:
      200:
        body:
          application/json:
            example:
              {
                "message": "Item deleted Succesfully"
              }
    is:
      - lib.collections
  post:
    description: inserted by admin
    responses:
      201:
        body:
          application/json:
            example:
              {
                "message": " Product inserted succesfully"
              }
    is:
      - lib.collections
/adminusers:
  description: Administration users
  get:
    description: get all users
    responses:
      200:
        body:
          application/json:
            example: !include Examples/users.raml
